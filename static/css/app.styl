}


.pop-address {
  .el-dialog {
    width: 600px;
    height: 410px;
    background: #fff;
    border-radius: 4px;
    .el-dialog__header {
      height: 46px;
      line-height 46px;
      background: rgba(13, 141, 252, 1);
      border-radius: 4px 4px 0 0;
      .el-dialog__headerbtn {
        display inline-block
        margin-top 12px
        .el-dialog__close {
          font-size 12px
          color: #fff;
        }
      }
      .el-dialog__title {
        width: 100%;
        font-size: 16px;
        font-weight: 600;
        color: #fff;
      }
    }
    .el-dialog__body {
      padding: 0 !important;
      .address-details {
        padding 30px 20px
        overflow hidden
        li + li {
          margin-top 14px
        }
        .lable {
          font-size: 14px;
          font-weight: 400;
          display inline-block
          width 110px
          text-align right
          color #373A41
        }
        .select-address {
          margin-right 14px
          height 40px
        }
        .el-input {
          height 40px
          width: 128px;
          .el-input__inner {
            height 40px !important
            font-size: 14px;
            font-family: "Microsoft YaHei", "TradeGothicLT-Bold", "PingFang SC", 'Source Han Sans CN', sans-serif;
          }
        }
        .input-address {
          width calc(100% - 120px)
        }
        .input-text {
          width 240px
        }
        .btn-box {
          text-align center
          margin-top 20px
          .ok {
            width: 110px;
            height: 34px;
            background: #0d8dfc;
            border-radius: 20px;
            line-height: 32px;
            margin-right 10px
            font-family: "Microsoft YaHei", "TradeGothicLT-Bold", "PingFang SC", 'Source Han Sans CN', sans-serif;
            &:hover {
              box-shadow 0 1px 1px 0 rgba(12, 157, 252, 0.4)
            }
          }
          .cancel {
            width: 110px;
            height: 34px;
            border-radius: 20px;
            line-height: 20px;
            border: 1px solid rgba(235, 235, 237, 1);
            background #FFF
            font-size: 14px;
            font-weight: 400;
            color: rgba(101, 105, 115, 1);
            font-family: "Microsoft YaHei", "TradeGothicLT-Bold", "PingFang SC", 'Source Han Sans CN', sans-serif;
            &:hover {
              box-shadow 0 1px 1px 0 rgba(95, 101, 117, 0.3)
            }
          }
        }
      }
    }

  }
}

@media screen and (max-width: 767px) {
  .pop-address .el-dialog {
    width 90%

    .el-dialog__body{

      .address-details{
        padding 10px

        .lable {
          width 70px
          font-size 14px
        }

        .select-address {
          margin-right 0
          width calc((100% - 90px)/3)
          > div {
            width 70px
          }
        }
        .el-input__icon {
          width 20px
        }
      }
    }
  }
}

