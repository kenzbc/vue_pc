                    font-family TradeGothicLT-Bold
                    font-size 18px
                    color #0C9DFC
                }

                .room-code {
                    height 22px
                    line-height 22px
                    margin-top 5px
                    font-size 16px
                }
            }

            .link-box {
                margin-top 15px
                line-height 36px

                input {
                    width 250px
                    height 36px
                    padding 0 15px
                    background #FAFBFD
                    border 1px solid #DDE4E9
                    border-radius 4px
                    margin 0 15px
                }
            }
        }
