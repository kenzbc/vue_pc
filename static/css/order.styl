#order {
    > .main {
        margin-top: 20px;
        margin-bottom: 100px;
        
        > .container {
            .left {
                width 790px
                height 762px
                position relative
                //overflow hidden
                
                &.show-lineup-compare {
                    #room-match,.lineup-wrap {
                        overflow hidden
                    }
                    .lineup-compare {
                        visibility visible
                        opacity 1
                    }
                }
                
                #room-match {
                    box-shadow: 0 1px 4px 0 rgba(5,17,25,0.06);
                    border-radius: 4px;
                    
                    &.show-match {
                        border-radius 2px
                        .match-count {
                            border-radius 0
                        }
                    }
                    
                    .match-count {
                        border-radius 4px 0 0 4px
                    }
                    
                    .match-info-wrap {
                        bottom inherit
                    }
                }
                
                .lineup-wrap {
                    margin-top 15px
                    height 665px
                    background #FAFBFD
                    border 1px solid #e7edf1
                    box-shadow 0 1px 4px 0 rgba(5,17,25,0.06)
                    border-radius 2px
                    position relative
                    
                    > .lineup-detail-box {
                        position absolute
                        left 50%
                        right 50%
                        top 50%
                        bottom 50%
                        background-color #fff
                        z-index 10
                        visibility hidden
                        opacity 0
                        transition-duration .3s
                        
                        &.show {
                            visibility visible
                            opacity 1
                            left 0
                            right 0
                            top 0
                            bottom 0
                        }
                    }
                    
                    > .title {
                        background: #FFFFFF;
                        box-shadow: 0 1px 4px 0 rgba(5,17,25,0.06);
                        height 40px
                        line-height 40px
                        padding 0 20px
                        font-size: 15px;
                        font-weight bold
                        position relative
                        z-index 3
                        
                        .status {
                            float right
                            font-size 18px
                            color rgba(165, 168, 178, 0.3)
                            &.status-4 {
                                font-size: 22px;
                                color: #FF5C5C;
                            }
                        }
                    }
                    
                    .lineup-detail-wrap {
                        border: 1px solid #E7EDF1
                        background-color #fff
                        border-radius 2px
                        overflow hidden
                        margin 15px
        
                        .order-info {
                            padding 17px 20px
                            height 70px
                            font-size 14px
                            position relative
            
                            > div {
                                height 36px
                                line-height 36px
                                float left
                                > span {
                                    display inline-block
                                    vertical-align middle
                                }
                                &.fr {
                                    float right
                    
                                    .join-button {
                                        cursor pointer
                                        padding 0 17px
                                        font-family TradeGothicLT
                                        font-weight bold
                                        font-size 16px
                                        margin-right 13px
                                    }
                                }
                            }
            
                            > div + div {
                                margin-left 32px
                            }
            
                            .light {
                                color #0C9DFC
                                font-size 20px
                                font-family TradeGothicLT-Bold
                                font-weight bold
                
                                &.price {
                                    font-size 24px
                                    color #DABE9B
                    
                                    span > span {
                                        margin-left 2px
                                    }
                                }
                            }
            
                            .reward {
                                div {
                                    height 24px
                                    line-height 24px
                                    display inline-block
                                    border-radius 4px
                                    position relative
                                    margin-left 4px
                                    vertical-align middle
                    
                                    .icon {
                                        width 24px
                                        height 22px
                                        padding 3px
                                    }
                    
                                    &.ticket {
                                        border: 1px solid #0497F8;
                        
                                        .icon {
                                            color #0497F8
                                        }
                        
                                        &:before {
                                            background-color #0C9DFC
                                        }
                                    }
                    
                                    &.fruit {
                                        border: 1px solid #FFA646;
                        
                                        &:before {
                                            background-color #FFA646
                                        }
                                    }
                    
                    
                                    &:before {
                                        text-align center
                                        display block
                                        float left
                                        position relative
                                        height 22px
                                    }
                    
                                    &:before {
                                        left 0
                                        content attr(data-val)
                                        padding 0 9px
                                        font-family TradeGothicLT
                                        font-weight bold
                                        color #fff
                                    }
                    
                                    &.other {
                                        font-weight bold
                                        height 40px
                                        width 50px
                                        line-height 20px
                                        padding 0 5px
                        
                                        &:before {
                                            display none
                                        }
                                    }
                                }
                            }
                            
                            .close {
                                cursor pointer
                                user-select none
                                height: 26px;
                                line-height: 26px;
                                text-align: center;
                                width: 26px;
                                border-radius: 50%;
                                background: #FF5C5C;
                                position: absolute;
                                right: 22px;
                                top: 22px;
                                display: block;
                                transition-duration: .3s;
                                color: #fff;
        
                                &:before {
                                    content: '\e614';
                                    font-size: 12px;
                                    text-align center
                                    font-family: 'icon';
                                }
        
                                &:hover {
                                    box-shadow: 0 2px 5px 0 rgba(255, 92, 92, 0.62);
